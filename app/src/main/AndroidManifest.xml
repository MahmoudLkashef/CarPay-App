<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.CarPay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarPay">
        <activity
            android:name="com.example.CarPay.ui.AddCar"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.CarPay.ui.CurrentCars"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.CarPay.ui.CustomersPayment"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.CarPay.ui.AdminPanel"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.CarPay.ui.PaymentActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.CarPay.ui.HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.CarPay.ui.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.CarPay.ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>